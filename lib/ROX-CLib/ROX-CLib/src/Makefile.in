SHELL = @SHELL@
srcdir = @srcdir@
PLATFORM_DIR = @bindir@
.SUFFIXES:
.SUFFIXES: .c .o .sh

LIBNAME = @LIBNAME@
CC = @CC@
CFLAGS = @CFLAGS@ `gtk-config --cflags` -I. -DLIBNAME=\"${LIBNAME}\"
LDFLAGS = @LDFLAGS@ `gtk-config --libs`
EXEC = ${PLATFORM_DIR}/bin/${PROG}
LIBDIR = ${PLATFORM_DIR}/lib
INCLUDEDIR = ${PLATFORM_DIR}/include
LIBFILE.a = ${LIBDIR}/lib${LIBNAME}.a

############ Things to change for different programs

PROG = pkg

SRCS = pkg.c error.c choices.c infowin.c

OBJECTS = pkg.o 

LIBOBJECTS = error.o choices.o infowin.o

INCLUDES = rox-clib.h error.h choices.h infowin.h

############ Things to keep the same

all: ${EXEC} ${PLATFORM_DIR}/bin/rox_run

${EXEC}: ${PLATFORM_DIR}/bin ${OBJECTS} ${LIBFILE.a} ${INCLUDEDIR}
	${CC} -o ${EXEC} ${OBJECTS} ${LDFLAGS}

${PLATFORM_DIR}/bin/rox_run: rox_run.sh
	cat rox_run.sh > $@
	chmod +x $@

${PLATFORM_DIR}:
	mkdir ${PLATFORM_DIR}

${PLATFORM_DIR}/bin: ${PLATFORM_DIR}
	-mkdir ${PLATFORM_DIR}/bin

${LIBDIR}:  ${PLATFORM_DIR}
	-mkdir ${LIBDIR}

${INCLUDEDIR}:  ${PLATFORM_DIR}
	-mkdir ${INCLUDEDIR}
	cp ${INCLUDES} ${INCLUDEDIR}

${LIBFILE.a}: ${LIBDIR} ${LIBOBJECTS}
	ar -r ${LIBFILE.a} ${LIBOBJECTS}

clean:
	rm -f *.o Makefile.bak

depend:
	makedepend -- $(CFLAGS) -- $(SRCS)

Makefile: Makefile.in config.status
	./config.status

config.h: config.h.in
	./config.status

config.status: configure
	./configure --bindir=${PLATFORM_DIR}

configure: configure.in
	autoconf
