dnl Process this file with autoconf to produce a configure script.
AC_INIT(pkg.c)
AC_CONFIG_HEADER(rox-clib.h)

dnl Checks for programs.
AC_PROG_CC
AC_PROG_MAKE_SET
dnl AC_PROG_LIBTOOL

if test -z "$GTK_CONFIG"; then
  GTK_CONFIG=gtk-config
fi
AC_SUBST(GTK_CONFIG)
AC_DEFINE_UNQUOTED(GTK_CONFIG, "$GTK_CONFIG")

AC_CHECK_PROG(XML_CONFIG, xml2-config, xml2-config, false)
if test "$XML_CONFIG" != "false"; then
  AC_DEFINE(HAVE_XML)
  AC_DEFINE_UNQUOTED(XML_CONFIG, "$XML_CONFIG")
fi

dnl Checks for libraries.
AC_CHECK_LIB(nsl, gethostbyname)

dnl Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(fcntl.h unistd.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST

dnl Checks for library functions.
AC_CHECK_FUNCS(mkdir gethostbyname)

dnl Extract version info from AppInfo.xml
AC_MSG_CHECKING(version information)
changequote(,)dnl
ROXCLIB_VERSION=`sed -n 's/^.*<Version>\([^<]*\)<\/Version>.*$/\1/p' ../AppInfo.xml`
changequote([,])dnl
AC_DEFINE_UNQUOTED(ROXCLIB_VERSION, "$ROXCLIB_VERSION")
AC_MSG_RESULT(version $ROXCLIB_VERSION)

LIBNAME=rox-clib
AC_SUBST(LIBNAME)

AC_OUTPUT(Makefile)
