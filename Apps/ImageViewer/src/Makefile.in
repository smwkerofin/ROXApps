GTK_CONFIG = "@GTK_CONFIG@"
XML_CONFIG = "@XML_CONFIG@"
GDK_PIXBUF_CONFIG = "@GDK_PIXBUF_CONFIG@"
SHELL = @SHELL@
srcdir = @srcdir@
PLATFORM = @with_platform@
PLATFORM_DIR = ../${PLATFORM}
.SUFFIXES:
.SUFFIXES: .c .o
ROX_CLIB = "@ROX_RUN@" ROX-CLib

CC = @CC@
CFLAGS = @CFLAGS@ `${GTK_CONFIG} --cflags` `${GDK_PIXBUF_CONFIG} --cflags` -I. `${ROX_CLIB} --cflags` `${XML_CONFIG} --cflags`
LDFLAGS = @LDFLAGS@ `${GDK_PIXBUF_CONFIG} --libs` `${GTK_CONFIG} --libs` `${ROX_CLIB} --libs` `${XML_CONFIG} --libs`
EXEC = ${PLATFORM_DIR}/${PROG}

############ Things to change for different programs
# Set the program name here (same as in AppRun)
PROG = ImageViewer

SRCS = main.c

OBJECTS = main.o

############ Things to keep the same

${EXEC}: ${PLATFORM_DIR} ${OBJECTS}
	${CC} -o ${EXEC} ${OBJECTS} ${LDFLAGS}

${PLATFORM_DIR}:
	mkdir ${PLATFORM_DIR}

clean:
	rm -f *.o Makefile.bak

depend:
	makedepend -- $(CFLAGS) -- $(SRCS)

Makefile: Makefile.in config.status
	./config.status

config.h: config.h.in
	./config.status

config.status: configure
	./configure --bindir=${PLATFORM_DIR}

configure: configure.in
	autoconf

${PROG}.po: $(SRCS)
	xgettext --keyword=_ --keyword=N_ --default-domain=${PROG} $(SRCS)
