<?xml version='1.0' encoding='UTF-8'?>
<options>
  <section title='Monitoring'>
    <numentry name='update_rate' label='Update rate' min='1' max='60'
	      width='2'>How often to check the system</numentry>
  </section>
  <section title='Display'>
    <numentry name='applet_size' label='Window size' min='32' max='64'
	      width='2'>Initial window size</numentry>
    <toggle name='show_max' label='Show maximum'>If this is on the
maximum value of the graph is shown</toggle>
    <toggle name='show_vals' label='Show values'>If this is on the
values of the 3 bars are shown</toggle>
    <toggle name='show_host' label='Show hostname'>If this is on the
name of the host Load is running on is shown</toggle>
    <toggle name='multiple' label='Multiple charts'>If this is on then
all 3 graphs are plotted</toggle>
    <font override='0' label='Display' name='font'>The font used for display</font>
    <section title='Colours'>
      <colour name='normal1' label='Normal, 1 minute'/>
      <colour name='normal5' label='Normal, 5 minutes'/>
      <colour name='normal15' label='Normal, 15 minutes'/>
      <colour name='high1' label='High, 1 minute'/>
      <colour name='high5' label='High, 5 minutes'/>
      <colour name='high15' label='High, 15 minutes'/>
      <colour name='foreground' label='Foreground'/>
      <colour name='background' label='Background'/>
    </section>
  </section>
</options>
