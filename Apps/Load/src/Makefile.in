SHELL = @SHELL@
srcdir = @srcdir@
PLATFORM_DIR = @bindir@
.SUFFIXES:
.SUFFIXES: .c .o

CC = @CC@
CFLAGS = @CFLAGS@ @LIBGTOP_INCS@ `gtk-config --cflags` -I.
LDFLAGS = @LDFLAGS@ @LIBGTOP_LIBS@ `gtk-config --libs`
EXEC = ${PLATFORM_DIR}/${PROG}

############ Things to change for different programs

PROG = Load

SRCS = load.c choices.c infowin.c

OBJECTS = load.o choices.o infowin.o

############ Things to keep the same

${EXEC}: ${PLATFORM_DIR} ${OBJECTS}
	${CC} -o ${EXEC} ${OBJECTS} ${LDFLAGS}

${PLATFORM_DIR}:
	mkdir ${PLATFORM_DIR}

clean:
	rm -f *.o Makefile.bak

depend:
	makedepend -- $(CFLAGS) -- $(SRCS)

Makefile: Makefile.in config.status
	./config.status

config.h: config.h.in
	./config.status

config.status: configure
	./configure --bindir=${PLATFORM_DIR}

configure: configure.in
	autoconf
