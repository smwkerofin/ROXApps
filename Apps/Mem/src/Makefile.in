GTK_CONFIG = @GTK_CONFIG@
XML_CONFIG = @XML_CONFIG@
ROX_CLIB = @ROX_RUN@ ROX-CLib
SHELL = @SHELL@
srcdir = @srcdir@
PLATFORM_DIR = @bindir@
.SUFFIXES:
.SUFFIXES: .c .o

CC = @CC@
CFLAGS = @CFLAGS@ @LIBGTOP_INCS@ `${GTK_CONFIG} --cflags` -I. `${ROX_CLIB} --cflags` `${XML_CONFIG} --cflags`
LDFLAGS = @LDFLAGS@ @LIBGTOP_LIBS@ @LIBGTOP_EXTRA_LIBS@ `${GTK_CONFIG} --libs` `${ROX_CLIB} --libs` `${XML_CONFIG} --libs`
EXEC = ${PLATFORM_DIR}/${PROG}

############ Things to change for different programs

PROG = Mem

SRCS = mem.c 

OBJECTS = mem.o 

############ Things to keep the same

${EXEC}: ${PLATFORM_DIR} ${OBJECTS}
	${CC} -o ${EXEC} ${OBJECTS} ${LDFLAGS}

${PLATFORM_DIR}:
	mkdir ${PLATFORM_DIR}

clean:
	rm -f *.o Makefile.bak

depend:
	makedepend -- $(CFLAGS) -- $(SRCS)

Makefile: Makefile.in config.status
	./config.status

config.h: config.h.in
	./config.status

config.status: configure
	./configure --bindir=${PLATFORM_DIR}

configure: configure.in
	autoconf

FreeFS.po: $(SRCS)
	xgettext --keyword=_ --keyword=N_ --default-domain=FreeFS $(SRCS)
