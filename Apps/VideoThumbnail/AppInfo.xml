<?xml version="1.0"?>
<AppInfo xmlns:smi="http://www.freedesktop.org/standards/shared-mime-info">
  <Summary>Generate thumbnail images for video files</Summary>
  <About>
    <Purpose>Generate thumbnail images for video files</Purpose>
    <Version>0.0.1 (8th November 2003)</Version>
    <Authors>Stephen Watson</Authors>
    <License>GNU General Public License</License>
    <Homepage>http://www.kerofin.demon.co.uk/rox/</Homepage>
  </About>  
  <Depends>
    <AppDir><Name>ROX-Lib2</Name></AppDir>
    <Program><Name>mplayer</Name></Program>
    <Library><Name>gtk</Name></Library>
  </Depends>
  <CanThumbnail>
    <smi:mime-type type="video/mpeg"/>
    <smi:mime-type type="video/quicktime"/>
    <smi:mime-type type="video/x-msvideo"/>
    <smi:mime-type type="video/x-ms-wmv"/>
    <smi:mime-type type="video/x-ms-asf"/>
    <smi:mime-type type="audio/x-pn-realaudio"/>
  </CanThumbnail>
</AppInfo>
